{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "LancacheManager.Services.LogWatcherService": "Debug",
      "LancacheManager.Services.DatabaseService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=lancache.db;"
  },
  "LanCache": {
    "CachePath": "/var/lancache/cache",
    "LogPath": "/var/lancache/logs/access.log",
    "GenerateSampleLogs": false,
    "Comment": "Set GenerateSampleLogs to true for development/testing without real LanCache logs"
  },
  "Feature": {
    "DirectSteamIntegration": true,
    "SkipLinesBasedOnBytesRead": true,
    "Comment": "DirectSteamIntegration enables real-time Steam API lookups, SkipLinesBasedOnBytesRead optimizes log reading"
  },
  "ExcludedClientIps": "",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  }
}