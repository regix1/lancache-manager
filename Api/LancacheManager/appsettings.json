{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "LancacheManager": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/data/lancache.db"
  },
  "LanCache": {
    "LogPath": "/logs/access.log",
    "CachePath": "/cache",
    "StartFromEndOfLog": true
  },
  "Security": {
    "ApiKeyPath": "/data/api_key.txt",
    "DevicesPath": "/data/devices",
    "EnableAuthentication": true,
    "RequireAuthForMetrics": false
  }
}